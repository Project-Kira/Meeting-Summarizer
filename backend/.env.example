# Database
DATABASE_URL=postgresql://meeting_user:meeting_pass@localhost:5432/meeting_summarizer
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_WORKERS=4
API_KEY=your-secret-api-key-here

# Inference Service
INFERENCE_HOST=127.0.0.1
INFERENCE_PORT=8001
INFERENCE_API_KEY=inference-secret-key
INFERENCE_MODEL_PATH=/path/to/models/mistral-7b-instruct-v0.2.Q5_K_M.gguf
INFERENCE_CONTEXT_SIZE=16384
INFERENCE_GPU_LAYERS=35
INFERENCE_THREADS=8

# Worker Configuration
WORKER_BATCH_TOKENS=2000
WORKER_BATCH_TIMEOUT=45
WORKER_MAX_RETRIES=3
WORKER_BACKOFF_BASE=2

# Chunking Configuration
CHUNK_SIZE=2000
CHUNK_OVERLAP=0.15
MAX_TOKENS_PER_REQUEST=15000

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
ALLOWED_HOSTS=127.0.0.1,localhost

# Performance
ENABLE_METRICS=true
METRICS_PORT=9090
